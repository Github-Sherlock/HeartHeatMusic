/* pages/Ranklist/Ranklist.wxss */
.scroll{
  width: 100%;
  height: 120rpx;
  display: flex;
  white-space: nowrap;
  align-items:center;
  border-bottom: 2rpx solid #f4f4f4;
  margin-top: 20rpx;
}
.scroll .scroll_view{
height: 80rpx;
display: inline-block;
margin: 10rpx;
text-align: center;
border-radius: 10rpx;
line-height: 80rpx;
background: #42B983;
color: #fff;
font-weight: bold;
padding: 0 10rpx;
}
.count{
  width: 100%;
  padding: 10rpx 10rpx 0rpx 30rpx;
  margin-top: 20rpx;
}
.count .count_all{
  width: 90%;
  display: flex;
  align-items: center;
  margin-bottom: 2%;
  box-shadow: 0rpx 0rpx 5rpx #ccc;
  padding: 20rpx 0 20rpx 20rpx;
 position: relative;
 overflow: hidden;
}
.count image{
  height: 100rpx;
  width: 120rpx;
  display: inline-block;
}
.count .count_c{
  display: inline-block;
  align-items: center;
  width: 100%;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  margin-left: 3%;
 
}
.green{
  position: absolute;
  width: 50%;
  height: 15rpx;
  background: #42B983;
  right: -20%;
  transform:rotate(45deg);
  box-shadow: 0rpx 5rpx 5rpx #ccc;
}
.green1{
  position: absolute;
  width: 50%;
  height: 15rpx;
  background: #42B983;
  right: -25%;
  transform:rotate(45deg);
  box-shadow: 0rpx 5rpx 5rpx #ccc;
}
.count .count_c view{
font-size: 25rpx;
color: #666;
margin-top: 15rpx;
width: 90%;
overflow: hidden;
text-overflow:ellipsis;
white-space: nowrap;
}
.count_text{
display: inline-block;
width: 90%;
overflow: hidden;
text-overflow:ellipsis;
white-space: nowrap;
}
.show{
  font-size: 25rpx
}
.hide{
 font-size: 0rpx;
}
.show1{
  display: block;
}
.hide1{
 display: none;
}