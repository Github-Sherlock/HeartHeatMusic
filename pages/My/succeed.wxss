/* pages/My/succeed.wxss */
.songList{
  width: 100%;
  height: 100%;
  background: #f2f2f2;
}
.song{
width: 98%;
height: 300rpx;
/* padding: 20rpx 10rpx; */
border-radius: 10rpx;
/* box-shadow: 0rpx 20rpx 10rpx #42B983; */
border: 1rpx solid #ccc;
display: flex;
flex-direction: column;
margin: 10rpx;
position: relative;
overflow: hidden;
}
.user_img{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  z-index: 2;
  margin: 20rpx 30rpx;
}
.song .user_name{
  position: absolute;
  left: 30rpx;
  bottom: 90rpx;
  font-weight: bold;
  color: #f5f5f5;
  z-index: 2;
}
.song .user_name1{
  position: absolute;
  left: 30rpx;
  bottom: 50rpx;
  font-size: 25rpx;
  color: #fff;
  z-index: 2;
}
.user_back{
  width: 100%;
  height: 500rpx;
  position: absolute;
  z-index: 1;
}
.user_followeds{
position: absolute;
z-index: 2;
color: #fff;
left: 30rpx;
bottom: 10rpx;
font-size: 25rpx;
border: 1rpx solid #fff;
border-radius: 10rpx;
padding: 2rpx 5rpx;
background: rgba(102, 102, 102, 0.5)
}
.user_follows{
position: absolute;
z-index: 2;
color: #fff;
left: 130rpx;
bottom: 10rpx;
font-size: 25rpx;
border: 1rpx solid #fff;
border-radius: 10rpx;
padding: 2rpx 5rpx;
background: rgba(102, 102, 102, 0.5)
}
.out{
position: absolute;
z-index: 2;
color: #fff;
right: 10rpx;
bottom: 10rpx;
font-size: 22rpx;
border: 1rpx solid #fff;
border-radius: 10rpx;
padding: 2rpx 10rpx;
background: rgba(102,102, 102, 0.5)
}
.songs{
  width: 100%;
  height: 280rpx;
  display: flex;
  white-space: nowrap;
  align-items:center;
  border-bottom: 2rpx solid #f4f4f4;
  margin-top: 20rpx;
}
.songs .playList{
display: inline-block;
margin: 10rpx;
text-align: center;
/* font-weight: bold; */
padding: 0 10rpx;
}
.songs .playList image{
width: 200rpx;
height: 200rpx;
}
.songs .playList text{
display: block;
color:#666;
width: 200rpx;
overflow: hidden
}
.count{
  width: 100%;
  padding: 10rpx 10rpx 0rpx 30rpx;
  margin-top: 20rpx;
}
.count .count_all{
  width: 90%;
  display: flex;
  align-items: center;
  margin-bottom: 2%;
  box-shadow: 0rpx 0rpx 5rpx #ccc;
  padding: 20rpx 0 20rpx 20rpx;
 position: relative;
 overflow: hidden;
}
.count image{
  height: 100rpx;
  width: 120rpx;
  display: inline-block;
}
.count .count_c{
  display: inline-block;
  align-items: center;
  width: 100%;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  margin-left: 3%;
 
}
.green{
  position: absolute;
  width: 50%;
  height: 15rpx;
  background: #42B983;
  right: -20%;
  transform:rotate(45deg);
  box-shadow: 0rpx 5rpx 5rpx #ccc;
}
.green1{
  position: absolute;
  width: 50%;
  height: 15rpx;
  background: #42B983;
  right: -25%;
  transform:rotate(45deg);
  box-shadow: 0rpx 5rpx 5rpx #ccc;
}
.count .count_c view{
font-size: 25rpx;
color: #666;
margin-top: 15rpx;
width: 90%;
overflow: hidden;
text-overflow:ellipsis;
white-space: nowrap;
}
.count_text{
display: inline-block;
width: 90%;
overflow: hidden;
text-overflow:ellipsis;
white-space: nowrap;
}
.show{
  font-size: 30rpx
}
.hide{
 font-size: 0rpx;
}
.show1{
  display: block;
}
.hide1{
 display: none;
}
.null{

}