/* pages/My/My.wxss */
.user{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.user image{
width: 130rpx;
height: 130rpx;
padding-bottom: 20rpx;
}
.user text{
font-size: 40rpx;
color: #2DCFBE;
}

.login{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: 50rpx;
}

.login input{
  width: 80%;
  padding-left: 10rpx;
  color: #2DCFBE;
  border-bottom: 1rpx solid #ccc;
  margin-top: 30rpx;
}
.login button{
  width: 80%;
  color: #2DCFBE;
  margin-top: 50rpx;
}