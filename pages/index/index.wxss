.index{
  display: flex;
  justify-content: center;
  align-items: center; 
}

.index_top{
  width: 100%;
  display: flex;
  padding: 10rpx 0rpx;
  justify-content: center;
  margin-top:10rpx;
}
.index_top input{
  width: 90%;
  height: 60rpx;
  border: 1px solid #ccc;
  border-radius: 8rpx;
  text-align: center;
  font-size: 28rpx;
}

.index_top image{
  width: 40rpx;
  height: 40rpx;
  padding-left: 10rpx;
  padding-top: 8rpx;
}
.index_count{
  display: flex;
  flex-direction: column;
  padding: 0 20rpx;
  font-size: 25rpx;
}
.count{
  width: 100%;
  padding: 10rpx 10rpx 0rpx 30rpx;

}
.count .count_all{
  width: 90%;
  display: flex;
  align-items: center;
  margin-bottom: 2%;
  box-shadow: 0rpx 0rpx 5rpx #ccc;
  padding: 20rpx 0 20rpx 20rpx;
 position: relative;
 overflow: hidden;
}
.count image{
  height: 100rpx;
  width: 120rpx;
  display: inline-block;
}
.count .count_c{
  display: inline-block;
  align-items: center;
  width: 100%;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  margin-left: 3%;
 
}
.green{
  position: absolute;
  width: 50%;
  height: 15rpx;
  background: #42B983;
  right: -20%;
  transform:rotate(45deg);
  box-shadow: 0rpx 5rpx 5rpx #ccc;
}
.green1{
  position: absolute;
  width: 50%;
  height: 15rpx;
  background: #42B983;
  right: -25%;
  transform:rotate(45deg);
  box-shadow: 0rpx 5rpx 5rpx #ccc;
}
.count .count_c view{
font-size: 25rpx;
color: #666;
margin-top: 15rpx;
width: 90%;
overflow: hidden;
text-overflow:ellipsis;
white-space: nowrap;
}
.count_text{
display: inline-block;
width: 90%;
overflow: hidden;
text-overflow:ellipsis;
white-space: nowrap;
}
.banner{
  padding: 0 10rpx;
}
.banner image{
  width: 100%;
  height:300rpx;
}
.nav_list{
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  border-bottom: 1px solid #ccc;
}
.nav_list view{
  width: calc(100%/4);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin: 20rpx 5%;
  text-align: center;
}
.nav_list image{
  width: 60rpx;
  height: 60rpx;
  background: #42B983;
  border-radius: 50%;
  padding: 20rpx;
}
.nav_list text{
  font-size: 28rpx;
  margin-top: 10rpx;
  color: #333;
}
.nav{
  width: 100%;
  height: 100%;
}
.show{
  font-size: 25rpx
}
.hide{
 font-size: 0rpx;
}
.show1{
  display: block;
}
.hide1{
 display: none;
}